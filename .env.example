# ==============================================
# AIRevenueOrc - Environment Configuration
# ==============================================

# Frontend API Configuration
VITE_API_URL=http://localhost:3000/api/v1
VITE_WS_URL=ws://localhost:3000/notifications

# Backend API Configuration (for server)
PORT=3000
NODE_ENV=development

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-change-this-in-production

# CORS (comma-separated origins for production)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Redis (for rate limiting & caching)
REDIS_URL=redis://localhost:6379

# Typesense (for search)
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=your-typesense-api-key

# SendGrid (for email delivery)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=AI Revenue Orc

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (optional - for multi-model AI)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini (optional - for multi-model AI)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Sentry (error tracking - production only)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Rate Limiting (optional overrides)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# ==============================================
# Production Deployment
# ==============================================

# For production, generate secure secrets:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#
# Or use:
# openssl rand -base64 64
